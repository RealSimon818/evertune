<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Amounts</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .search-bar-container {
      margin-bottom: 20px;
      display: flex;
      justify-content: flex-start;
    }
    .search-bar {
      max-width: 300px;
    }
    .back-link {
      text-align: center;
      margin-top: 20px;
    }
    .back-link a {
      color: #F7594E;
      font-weight: bold;
      text-decoration: none;
    }
    .back-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">User Amounts</h1>

    <!-- Search Bar -->
    <div class="search-bar-container">
      <input 
        type="text" 
        id="searchInput" 
        class="form-control search-bar" 
        placeholder="Search by Username"
        aria-label="Search">
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Pending USDC Amount</th>
          <th>Pending Profits</th>
          <th>Frozen Amount</th>
          <th>Frozen Profits</th>
          <th>Deposit</th>
        </tr>
      </thead>
      <tbody id="userAmountsTableBody">
        <% if (userAmounts.length > 0) { %>
          <% userAmounts.forEach((entry) => { %>
            <tr>
              <td><%= entry.username %></td>
              <td><%= entry.pendingUSDCAmount %></td>
              <td><%= entry.pendingProfits %></td>
              <td><%= entry.frozenAmount %></td>
              <td><%= entry.frozenProfits %></td>
              <td><%= entry.deposit %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

   <div class="back-link">
        <a href="/admin/dashboard">Back to Dashboard</a>
      </div>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#searchInput').on('keyup', function () {
        const query = $(this).val().trim();

        $.ajax({
          url: '/userAmounts/search', // Adjust endpoint as necessary
          method: 'GET',
          data: { username: query },
          success: function (response) {
            const tbody = $('#userAmountsTableBody');
            tbody.empty();

            if (response.userAmounts && response.userAmounts.length > 0) {
              response.userAmounts.forEach(entry => {
                tbody.append(`
                  <tr>
                    <td>${entry.username}</td>
                    <td>${entry.pendingUSDCAmount}</td>
                    <td>${entry.pendingProfits}</td>
                    <td>${entry.frozenAmount}</td>
                    <td>${entry.frozenProfits}</td>
                    <td>${entry.deposit}</td>
                  </tr>
                `);
              });
            } else {
              tbody.append('<tr><td colspan="6" class="text-center">No data available</td></tr>');
            }
          },
          error: function () {
            console.error('Error fetching user amounts');
          }
        });
      });
    });
  </script>
</body>
</html>
