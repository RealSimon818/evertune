<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Statistics</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .back-link {
      text-align: center;
      margin-top: 20px;
    }
    .back-link a {
      color: #F7594E;
      font-weight: bold;
      text-decoration: none;
    }
    .back-link a:hover {
      text-decoration: underline;
    }
    .search-bar-container {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .search-bar {
      max-width: 300px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">User Statistics</h2>

    <!-- Search Bar -->
    <div class="search-bar-container">
      <input
        type="text"
        id="searchInput"
        class="form-control search-bar"
        placeholder="Search by Username"
        aria-label="Search"
      >
    </div>

    <table class="table table-bordered table-hover">
      <thead class="table-primary">
        <tr>
          <th>Username</th>
          <th>Total Balance</th>
          <th>Today's Profit</th>
          <th>Freezing Point</th>
          <th>VIP Level</th>
          <th>Daily Limit</th>
          <th>Optimization Count</th>
        </tr>
      </thead>
      <tbody id="userStatsTableBody">
        <% userStats.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.totalBalance.toFixed(2) %></td>
            <td><%= user.todaysProfit.toFixed(2) %></td>
            <td><%= user.freezingPoint %></td>
            <td><%= user.vipLevel %></td>
            <td><%= user.dailyLimit %></td>
            <td><%= user.optimizationCount %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <div class="back-link">
    <a href="/admin/dashboard">Back to Dashboard</a>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#searchInput').on('keyup', function () {
        const query = $(this).val().trim();

        $.ajax({
          url: '/user-stats/search', // Adjust endpoint if needed
          method: 'GET',
          data: { username: query },
          success: function (response) {
            const tbody = $('#userStatsTableBody');
            tbody.empty();

            if (response.userStats && response.userStats.length > 0) {
              response.userStats.forEach(user => {
                tbody.append(`
                  <tr>
                    <td>${user.username}</td>
                    <td>${user.totalBalance.toFixed(2)}</td>
                    <td>${user.todaysProfit.toFixed(2)}</td>
                    <td>${user.freezingPoint}</td>
                    <td>${user.vipLevel}</td>
                    <td>${user.dailyLimit}</td>
                    <td>${user.optimizationCount}</td>
                  </tr>
                `);
              });
            } else {
              tbody.append('<tr><td colspan="7" class="text-center">No users found</td></tr>');
            }
          },
          error: function () {
            console.error('Error fetching search results');
          }
        });
      });
    });
  </script>
</body>
</html>
