    <!-- Google Fonts (same priority: Montserrat, Manrope, Red Hat, DM Sans, fallbacks) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Manrope:wght@300..700&family=Red+Hat+Display:wght@300..700&family=DM+Sans:wght@500&family=Roboto:wght@300..700&family=Source+Sans+Pro:wght@300..700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #FFFFFF;
            color: #1B1B1B;
            font-family: 'Manrope', 'Roboto', 'Source Sans Pro', sans-serif;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        .container-base {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        /* same gradient background as terms (soft angular) */
        .faq-gradient-bg {
            background: radial-gradient(circle at 100% 20%, rgba(255,249,246,0.9) 0%, rgba(249,220,183,0.3) 50%, rgba(105,215,222,0.12) 90%);
            background-blend-mode: plus-darker;
        }

        /* header with back + brand */
        .faq-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-bottom: 2rem;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background-color: transparent;
            border: 1.5px solid #1B1B1B;
            color: #1B1B1B;
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            font-size: 1rem;
            padding: 0.6rem 1.6rem;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            box-shadow: 0 2px 6px rgba(0,0,0,0.02);
        }

        .back-btn:hover {
            background-color: #F7594E;       /* coral red */
            border-color: #F7594E;
            color: white;
            transform: scale(1.02);
            box-shadow: 0 8px 18px rgba(247, 89, 78, 0.15);
        }

        .back-arrow {
            font-size: 1.3rem;
            line-height: 1;
        }

       /* EverTune logo / brand word */
        .logo-wrapper {
            display: flex;
            align-items: center;
        }
        .evertune-logo {
            width: 136px;
            height: 32px;
        }

        h1 {
            font-family: 'Montserrat', 'Manrope', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            margin: 0.5rem 0 0.25rem;
            line-height: 1.2;
        }

        .subhead {
            font-size: 1.1rem;
            color: #3a3a3a;
            margin-bottom: 2.5rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding-bottom: 1rem;
            font-style: italic;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* FAQ grid / card layout */
        .faq-grid {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .faq-card {
            background: white;
            border-radius: 28px;
            padding: 1.6rem 2rem;
            box-shadow: 0 4px 18px rgba(0, 0, 0, 0.03);
            border: 1px solid rgba(255,255,255,0.6);
            transition: box-shadow 0.2s ease;
        }

        .faq-card:hover {
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.05);
        }

        .faq-question {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            font-size: 1.35rem;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #1B1B1B;
            margin-bottom: 0.75rem;
        }

        .q-icon {
            background: linear-gradient(135deg, #F7594E, #F9DCB7);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-size: 1.8rem;
            font-weight: 600;
            min-width: 38px;
            text-align: center;
        }

        .faq-answer {
            font-family: 'Manrope', 'Roboto', sans-serif;
            padding-left: 2.8rem;  /* align with text after icon */
            color: #2a2a2a;
            font-size: 1rem;
        }

        .faq-answer p {
            margin-bottom: 0.5rem;
        }

        .faq-answer ul {
            margin: 0.5rem 0 0.5rem 1.5rem;
        }

        .faq-answer li {
            margin-bottom: 0.2rem;
        }

        .badge-mini {
            background: #FFF9F6;
            border-radius: 50px;
            padding: 0.2rem 0.9rem;
            font-size: 0.8rem;
            font-weight: 500;
            color: #F7594E;
            border: 1px solid rgba(247,89,78,0.2);
            margin-left: 1rem;
            white-space: nowrap;
        }

        hr {
            border: none;
            height: 1px;
            background: linear-gradient(90deg, #69D7DE 20%, #F9DCB7 80%);
            margin: 2rem 0 1rem;
            opacity: 0.2;
        }

        .footer-faq {
            margin-top: 3rem;
            text-align: center;
            font-size: 0.9rem;
            color: #4a4a4a;
            border-top: 1px solid rgba(0,0,0,0.05);
            padding-top: 2rem;
            font-family: 'Manrope', sans-serif;
        }

        .footer-faq a {
            color: #1B1B1B;
            text-decoration: none;
            border-bottom: 1px dotted #F7594E;
        }
        .footer-faq a:hover {
            color: #F7594E;
        }

        /* responsive */
        @media (max-width: 600px) {
            h1 { font-size: 2rem; }
            .faq-question { font-size: 1.2rem; }
            .faq-answer { padding-left: 0rem; }
            .faq-card { padding: 1.2rem 1.2rem; }
            .q-icon { min-width: 30px; }
        }

        /* additional vip / cross-link style */
        .coral-text {
            color: #F7594E;
            font-weight: 500;
        }

        .highlight-box {
            background: #FDFEFE;
            border-radius: 20px;
            padding: 0.75rem 1.2rem;
            border-left: 5px solid #F7594E;
            margin: 1rem 0 0 2.8rem;
            font-size: 0.95rem;
        }

        /* for inline list in answers */
        .inline-dot {
            display: inline-block;
            background: #F7594E;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }
    </style>
