    <!-- CHART 1 -->
    <div class="chart-card">
      <div class="chart-header">
        <i class="bi bi-calendar2-week-fill"></i>
        <div class="chart-header-text">
          <p class="chart-header-title">Current month · salary projection</p>
          <p class="chart-header-sub">Based on completed tasks & bonuses</p>
