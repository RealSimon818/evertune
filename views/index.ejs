                    statusDiv.className = 'referral-status invalid';
                    statusDiv.textContent = '‚úó ' + data.message;
                    referralValid = false;
                }
            } catch (error) {
                statusDiv.className = 'referral-status invalid';
                statusDiv.textContent = '‚úó Error verifying code';
                referralValid = false;
            }
        }

        // Show alert
        function showAlert(message, type = 'error') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.innerHTML = `
                <span>${message}</span>
                <button class="alert-close" onclick="closeAlert(this)">√ó</button>
            `;
            
            setTimeout(() => {
                alertDiv.classList.add('show');
            }, 10);
            
            const container = document.getElementById('messageContainer');
            container.innerHTML = '';
            container.appendChild(alertDiv);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                closeAlert(alertDiv.querySelector('.alert-close'));
            }, 5000);
        }

        // Close alert
        function closeAlert(button) {
            const alert = button.closest('.alert');
            alert.classList.remove('show');
            setTimeout(() => {
                if (alert.parentElement) {
                    alert.remove();
                }
            }, 300);
        }

        // Show loading on button
        function showButtonLoading(button, isLoading) {
            if (isLoading) {
                button.classList.add('loading');
                button.disabled = true;
            } else {
                button.classList.remove('loading');
                button.disabled = false;
            }
        }

        // Handle registration
        async function register(event) {
            event.preventDefault();
            
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            // Check referral code
            if (!referralValid) {
                showAlert('Please enter a valid referral code');
                return;
            }
            
            const btn = document.getElementById('registerBtn');
            showButtonLoading(btn, true);
            
            try {
                const response = await fetch('/api/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert(result.message, 'success');
                    setTimeout(() => {
                        window.location.href = result.redirect;
                    }, 1500);
                } else {
                    showAlert(result.message);
                }
            } catch (error) {
                showAlert('An error occurred. Please try again.');
            } finally {
                showButtonLoading(btn, false);
            }
        }

