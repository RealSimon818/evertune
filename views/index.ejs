        // Initialize page based on URL
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const authPage = urlParams.get('auth') || 'login';
            
            showForm(authPage);
            
            // Auto-verify referral code if present in form
            const invitationInput = document.getElementById('invitationCode');
            if (invitationInput && invitationInput.value) {
                verifyReferral(invitationInput.value);
            }
            
            // Show message from query parameters
            const message = urlParams.get('message');
            const success = urlParams.get('success');
            
            if (message) {
                showAlert(decodeURIComponent(message));
            }
            if (success) {
                showAlert(decodeURIComponent(success), 'success');
            }
        });

        // Handle browser back/forward buttons
        window.addEventListener('popstate', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const authPage = urlParams.get('auth') || 'login';
            showForm(authPage);
        });
    </script>
