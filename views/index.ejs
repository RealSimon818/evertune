                this.classList.add('selected');
                this.querySelector('input').checked = true;
            });
        });

        // Verify referral code
        let referralValid = false;
        
        async function verifyReferral(code) {
            const statusDiv = document.getElementById('referralStatus');
            
            if (!code) {
                statusDiv.className = 'referral-status';
                statusDiv.textContent = '';
                referralValid = false;
                return;
            }
            
            // Show loading state
            statusDiv.className = 'referral-status';
            statusDiv.textContent = 'Verifying...';
            statusDiv.style.display = 'block';
            
            try {
                const response = await fetch('/api/verify-referral', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ code })
                });
                
                const data = await response.json();
                
                if (data.valid) {
                    statusDiv.className = 'referral-status valid';
                    statusDiv.textContent = '‚úì ' + data.message;
                    referralValid = true;
