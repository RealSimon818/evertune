<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .search-bar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .search-bar {
      max-width: 300px;
    }
    .back-link {
      text-align: center;
      margin-top: 20px;
    }
    .back-link a {
      color: #F7594E;
      font-weight: bold;
      text-decoration: none;
    }
    .back-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">User Management</h1>

    <!-- Search Bar and Status Filter -->
    <div class="search-bar-container">
      <input 
        type="text" 
        id="searchInput" 
        class="form-control search-bar" 
        placeholder="Search by Username" 
        aria-label="Search"
      >
      
      <select id="statusFilter" class="form-select" style="width: 200px;">
        <option value="">All Users</option>
        <option value="pending">Pending Users</option>
        <option value="active">Active Users</option>
        <option value="banned">Banned Users</option>
      </select>
    </div>

    <!-- User Table -->
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Username</th>
          <th>Invitation Code</th>
          <th>Phone Number</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="userTableBody">
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.invitationCode %></td>
            <td><%= user.phoneNumber %></td>
            <td><%= user.status %></td>
            <td>
              <% if (user.status !== 'active') { %>
                <form action="/admin/users/<%= user._id %>/status" method="POST" class="d-inline">
                  <input type="hidden" name="status" value="active">
                  <button type="submit" class="btn btn-success btn-sm">Activate</button>
                </form>
              <% } %>
              <% if (user.status !== 'banned') { %>
                <form action="/admin/users/<%= user._id %>/status" method="POST" class="d-inline">
                  <input type="hidden" name="status" value="banned">
                  <button type="submit" class="btn btn-danger btn-sm">Ban</button>
                </form>
              <% } %>
              <form action="/admin/users/<%= user._id %>/delete" method="POST" class="delete-form d-inline" onsubmit="return confirmDelete(event)">
                <button type="submit" class="btn btn-warning btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <div class="back-link">
    <a href="/admin/dashboard">Back to Dashboard</a>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      // Perform AJAX search and status filter
      function fetchUsers() {
        const query = $('#searchInput').val().trim();
        const status = $('#statusFilter').val();
  
        // Perform AJAX request
        $.ajax({
          url: '/admin/users/filter', // Endpoint to filter users based on status and username
          method: 'GET',
          data: { username: query, status: status },
          success: function (response) {
            const tbody = $('#userTableBody');
            tbody.empty();
  
            if (response.users && response.users.length > 0) {
              response.users.forEach(user => {
                tbody.append(`
                  <tr>
                    <td>${user.username}</td>
                    <td>${user.invitationCode}</td>
                    <td>${user.phoneNumber}</td>
                    <td>${user.status}</td>
                    <td>
                      ${user.status !== 'active' ? `
                        <form action="/admin/users/${user._id}/status" method="POST" class="d-inline">
                          <input type="hidden" name="status" value="active">
                          <button type="submit" class="btn btn-success btn-sm">Activate</button>
                        </form>
                      ` : ''}
                      ${user.status !== 'banned' ? `
                        <form action="/admin/users/${user._id}/status" method="POST" class="d-inline">
                          <input type="hidden" name="status" value="banned">
                          <button type="submit" class="btn btn-danger btn-sm">Ban</button>
                        </form>
                      ` : ''}
                      <form action="/admin/users/${user._id}/delete" method="POST" class="delete-form d-inline">
                        <button type="submit" class="btn btn-warning btn-sm">Delete</button>
                      </form>
                    </td>
                  </tr>
                `);
              });
            } else {
              tbody.append('<tr><td colspan="5" class="text-center">No users found</td></tr>');
            }
          },
          error: function () {
            console.error('Error fetching search results');
          }
        });
      }
  
      // Handle user deletion with confirmation and AJAX
      $(document).on('submit', '.delete-form', function (e) {
        e.preventDefault();
        const form = $(this);
        const row = form.closest('tr');
  
        // Display confirmation dialog
        const isConfirmed = confirm("Are you sure you want to delete this user?");
        if (!isConfirmed) {
          return; // Stop if user cancels
        }
  
        // Proceed with deletion if confirmed
        $.ajax({
          url: form.attr('action'),
          method: 'POST',
          success: function () {
            row.fadeOut(500, function () {
              row.remove();
            });
          },
          error: function () {
            alert('Error deleting user.');
          }
        });
      });
  
      // Trigger search and filter on keyup and change
      $('#searchInput, #statusFilter').on('keyup change', function () {
        fetchUsers();
      });
  
      // Initial fetch when the page loads
      fetchUsers();
    });
  </script>
  
  
</body>
</html>
