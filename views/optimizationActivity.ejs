<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Optimization Activity</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="text-center mb-4">Optimization Activity</h2>

                <% if (data && data.length > 0) { %>
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Username</th>
                                <th>Record Creation Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= item.username %></td>
                                    <td><%= item.recordCreationCount %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-warning text-center">
                        No activity data found.
                    </div>
                <% } %>

                <div class="text-center mt-4">
                    <!-- Button to reset activity for all users -->
                    <form action="/resetAllOptimizationActivities" method="POST" onsubmit="return confirm('Are you sure you want to reset activities for all users?');">
                        <button type="submit" class="btn btn-danger">Reset Activity for All Users</button>
                    </form>
                </div>

                <div class="text-center mt-3">
                    <a href="/admin/dashboard" class="btn btn-info text-light">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
